<div class="container">
  <h1>Create new restaurant</h1>

  <%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, :collection => (0..5) %>
  </div>

  <div class="form-actions pt-3">
    <%= f.button :submit, class:"btn btn-primary text-white"%>
  </div>
  <div class="pt-3">
    <%= link_to "Return to Restaurants List", restaurants_path %>
  </div>
  <div class="pt-3">
    <%= link_to "Return to Restaurant", restaurant_path(@restaurant) %>
  </div>
<% end %>
</div>
